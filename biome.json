{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "attributePosition": "auto",
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "ignore": [
      "**/node_modules",
      "./.next",
      "dist/**",
      ".nuxt",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      "meta"
    ]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "error",
        "useExportType": "error"
      },
      "suspicious": {
        "noConsoleLog": "error",
        "noExplicitAny": "off"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      }
    },
    "ignore": [
      "**/node_modules",
      "./.next",
      "dist/**",
      ".wrangler",
      ".react-email",
      ".contentlayer",
      "meta"
    ]
  },
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/node_modules",
      "./.next",
      "dist/**",
      ".nuxt",
      ".wrangler",
      ".react-email",
      ".contentlayer"
    ]
  },
  "overrides": [
    {
      "include": ["*.json", "*.jsonc"],
      "formatter": {
        "indentWidth": 2
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  }
}
